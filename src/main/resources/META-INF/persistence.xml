<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name = "CitadelJDBC_PersistenceUnit" transaction-type="JTA">
   <jta-data-source>jdbc/CitadelJDBC</jta-data-source>
      <class>org.example.data.entity.ELogin</class>
      <class>org.example.data.entity.EFile</class>
      <class>org.example.data.entity.ENameFiles</class>
      <class>org.example.data.entity.EReport</class>
  </persistence-unit>

<persistence-unit name = "CitadelJDBCPG_PersistenceUnit" transaction-type="JTA">
    <jta-data-source>jdbc/CitadelJDBCPG</jta-data-source>
    <class>org.example.data.entity.ELogin</class>
    <class>org.example.data.entity.EFile</class>
    <class>org.example.data.entity.ENameFiles</class>
    <class>org.example.data.entity.EReport</class>
</persistence-unit>

</persistence>
